# i. Function to reverse a list
def reverse_list(input_list):
    return input_list[::-1]

# ii. Function to calculate grades
def calculate_grade(score):
    if score >= 90:
        return "A"
    elif score >= 80:
        return "B"
    elif score >= 70:
        return "C"
    elif score >= 60:
        return "D"
    else:
        return "F"

